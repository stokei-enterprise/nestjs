{
  "name": "@stokei/nestjs",
  "version": "1.1.0",
  "description": "Stokei NestJS library.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc -p tsconfig.json -w",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "prepare": "tsc -p tsconfig.json",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "check:updates": "ncu",
    "run:upgrades": "ncu -u",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stokei/nestjs"
  },
  "keywords": [
    "NestJS",
    "Stokei"
  ],
  "author": "Douglas Pereira Bernardes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stokei/nestjs/issues"
  },
  "homepage": "https://github.com/stokei/nestjs#README",
  "peerDependencies": {
    "@nestjs/common": ">=8.4.0",
    "@nestjs/core": ">=8.4.0",
    "@nestjs/graphql": ">=10.0.6",
    "graphql": ">=16.3.0"
  },
  "dependencies": {
    "@apollo/gateway": "^2.4.8",
    "@nestjs/common": "^10.0.3",
    "@nestjs/core": "^10.0.3",
    "@nestjs/graphql": "^12.0.3",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/platform-express": "^10.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.8",
    "dotenv": "^16.3.1",
    "graphql": "^16.7.1",
    "nanoid": "^4.0.2",
    "npm-check-updates": "^16.10.13",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.5",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.3",
    "@types/crypto-js": "^4.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
