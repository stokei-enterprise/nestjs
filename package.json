{
  "name": "@stokei/nestjs",
  "version": "1.0.0",
  "description": "Stokei NestJS library.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json",
    "prepare": "tsc -p tsconfig.json",
    "prepublish": "npm run build",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stokei/nestjs.git"
  },
  "keywords": ["NestJS", "Stokei"],
  "author": "Douglas Pereira Bernardes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stokei/nestjs/issues"
  },
  "homepage": "https://github.com/stokei/nestjs#readme",
  "peerDependencies": {
    "@apollo/federation": "^0.35.1",
    "@apollo/gateway": "^0.48.1",
    "@apollo/subgraph": "^0.3.1",
    "@nestjs/apollo": "^10.0.6",
    "@nestjs/common": "^8.4.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/cqrs": "^8.0.3",
    "@nestjs/graphql": "^10.0.6",
    "graphql": "^16.3.0"
  },
  "dependencies": {
    "@apollo/federation": "^0.35.1",
    "@apollo/gateway": "^0.48.1",
    "@apollo/subgraph": "^0.3.1",
    "@nestjs/apollo": "^10.0.6",
    "@nestjs/common": "^8.4.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/cqrs": "^8.0.3",
    "@nestjs/graphql": "^10.0.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.4.0",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/platform-fastify": "^8.4.0",
    "@nestjs/throttler": "^2.0.0",
    "@types/csurf": "^1.11.2",
    "amqp-connection-manager": "^3.7.0",
    "amqplib": "^0.8.0",
    "apollo-server-core": "^3.6.3",
    "apollo-server-express": "^3.6.3",
    "apollo-server-fastify": "^3.6.3",
    "class-transformer": "^0.4.0",
